<div class="container my-5">
  <h3 class="my-3">New Event</h3>
   <div class="row">
     <div class="col-6">
        <div id="event_images" style="display: none;">
          <p id="preview"></p>
        </div>
     </div>
     <div class="col-6">
       <%= render 'devise/shared/event-error', event:@event %>
        <%= form_with model:@event, url:events_path do |f| %>
          <table class="table table-borderless">
            <tbody>
              <tr><th>
                <%= f.datetime_field :date %>
              </th></tr>
              <tr><th>
                <label class>
                <i class="fa-regular fa-image"></i>
                <%= f.file_field :event_image, accept: "image/*", onchange: "avatarImage(this);"%>
                </label>
              </th></tr>
              <tr><td><%= f.text_field :event_name, placeholder:"イベントタイトル", class:'form-control' %></td></tr>
              <tr><td><%= f.text_area :event_introduction,rows:"15", placeholder:"イベント詳細", class:'form-control' %></td></tr>
              <tr>
                <td>
                
                <%= f.radio_button :event_status, :offline %><%= f.label :"オフライン"%>
                <%= f.radio_button :event_status, :online %><%= f.label :"オンライン" %>
                </td>
              </tr>
              <tr><td><%= f.text_area :url, placeholder:"オンライン開催URL", class:'form-control' %></td></tr>
              <tr><td><%= f.text_field :postal_code, placeholder:"〒 郵便番号", class:'form-control' %></td></tr>
              <tr><td><%= f.text_area :adress,rows:"4", placeholder:"住所", class:'form-control'%></td> </tr>
              <tr><td><%= f.submit "作成する", class: "btn btn-success" %></td></tr>
            </tbody>
          </table>
        <% end %>
      </div>
  </div>
</div>

