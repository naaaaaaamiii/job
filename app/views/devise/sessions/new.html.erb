<div class="container">
     <div class="row">
        <div class="col">
          <%= form_with model:@user, url: user_session_path do |f| %>
            <h2>Log in</h2>
              <table class="table table-borderless">
                <tbody>
                  <tr>
                    <th> <%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
                  </tr>
                  <tr>
                    <th><%= f.password_field :password, autocomplete: "current-password" %></th>
                  </tr>
                  <tr>
                    <th>
                     <% if devise_mapping.rememberable? %>
                       <%= f.check_box :remember_me %>
                       <%= f.label :remember_me %>
                     <% end %>
                    </th>
                  </tr>
                  <tr>
                    <th> <%= f.submit "Log in" %></th>
                  </tr>
                </tbody>
              </table>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
     </div>
</div>

