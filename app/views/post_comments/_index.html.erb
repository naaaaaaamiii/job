<table>
  <!--コメント一覧-->
  <tbody>
    <% post.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to user_path(post_comment.user) do %>
          <%= image_tag post_comment.user.get_image(40,40), class:'rounded-circle' %><br>
          <%= post_comment.user.name %>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <% if post_comment.user == current_user %>
         <!--コメント削除ボタン-->
          <%= link_to post_post_comment_path(post, post_comment), method: :delete, class: "btn", remote:true,  data: {"turbolinks" => false}, data: {confirm: "<確認>削除しますか？"} do %>
          <i class="fa-solid fa-trash-can"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>