                              <%= post.user.name %>
                              <%=  post.created_at.strftime('%Y/%m/%d') %>
                            </div>
                            <div class="card-body">
                              <h5 class="card-title"><strong><%= post.title %></strong></h5>
                              <h6 class="card-text"><%= post.body %></h6>
                            </div>
                          </a>
                        </div>
                    </div>
                 <% end %>
              </div>
            <div class="row m-4">
                <h3 class><i class="fa-regular fa-circle-play", style="color:#0000ff;"></i>いいねが多い経験</h3>
            </div>
               <div class="row top-row flex-nowrap m-4">
                  <% @favorites.each do |post| %>
                    <div class="col top-col justify-content-around ">
                        <div class="card" style="width: 20rem;">
                          <a href="/posts/<%= post.id %>" class="text-dark">
                            <div class="card-hedder m-1">
