 <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'home' %>
       <div class="main-visual">
         <div class="main-visual-top">
           <%= image_tag '22_01_001.png', class:'image' %><br>
           <p class="main-visual-text">見たことのない景色<br>みにいこう</p>
         </div>
         <div class="main-visual-bottom">
           <%= link_to "About", about_path, class:'btn btn-flat' %><br>
           <%= link_to "ログインする", new_user_session_path %>
         </div>
       </div>
       <div class="container">
          <div class="row m-4">
            <h3 class><i class="fa-regular fa-circle-play", style="color:#0000ff;"></i>注目されている経験</h3>
          </div>
          <div class="row top-row flex-nowrap ml-4">
              <% @impressions.each do |post| %>
                <div class="col top-col justify-content-around">
                    <div class="card" style="width: 20rem;">
                      <a href="/posts/<%= post.id %>" class="text-dark">
                          <div class="card-hedder">
                            <%= image_tag post.user.get_image(30,30) %>
                            <%= post.user.name %>
                          </div>
                          <div class="card-body">
                            <h5 class="card-title"><strong><%= post.title %></strong></h5>
                            <h6 class="card-text"><%= post.body %></h6>
                          </div>
                      </a>
                    </div>
                </div>
             <% end %>
          </div>
           <div class="row m-4">
                <h3 class><i class="fa-regular fa-circle-play", style="color:#0000ff;"></i>新しく投稿された経験</h3>
            </div>
              <div class="row top-row flex-nowrap ml-4">
                  <% @posts.each do |post| %>
                    <div class="col top-col justify-content-around ">
                        <div class="card" style="width: 20rem;">
                          <a href="/posts/<%= post.id %>" class="text-dark">
                            <div class="card-hedder">
                              <%= post.user.name %>
                            </div>
                            <div class="card-body">
                              <h5 class="card-title"><strong><%= post.title %></strong></h5>
                              <h6 class="card-text"><%= post.body %></h6>
                            </div>
                          </a>
                        </div>
                    </div>
                 <% end %>
              </div>
            <div class="row m-4">
                <h3 class><i class="fa-regular fa-circle-play", style="color:#0000ff;"></i>いいねが多い経験</h3>
            </div>
               <div class="row top-row flex-nowrap m-4">
                  <% @favorites.each do |post| %>
                    <div class="col top-col justify-content-around ">
                        <div class="card" style="width: 20rem;">
                          <a href="/posts/<%= post.id %>" class="text-dark">
                            <div class="card-hedder">
                              <%= post.user.name %>
                            </div>
                            <div class="card-body">
                              <h5 class="card-title"><strong><%= post.title %></strong></h5>
                              <h6 class="card-text"><%= post.body %></h6>
                            </div>
                          </a>
                        </div>
                    </div>
                 <% end %>
              </div>
            </div>
       </div>
       <div class="container my-5">
           <div class="row m-4">
               <h3 class><i class="fa-solid fa-seedling", style="color:#008080;"></i>Event一覧</h3>
            </div>
              <div class="row top-row flex-nowrap m-4">
                  <% @events.each do |event| %>
                    <div class="col top-col justify-content-around ">
                      <div class="card" style="width: 20rem;">
                        <a href="/events/<%= event.id %>" class="text-dark">
                            <h5 class="card-title"><strong><%= event.event_name %></strong></h5>
                            <h6 class="card-text"><%= event.event_introduction %></h6>
                         </a>
                      </div>
                    </div>
                 <% end %>
              </div>
              <div class="row event-row">
                <h5 claas><i class="fa-solid fa-paper-plane"></i><%= link_to "More event", events_path, class:"link" %></h5>
              </div>
             </div>
       </div>


