<div class="container">
 <!--今ログインしているユーザーのプロフィール-->
 <div class="row m-5">
    <div class="col-3">
     <%= image_tag @user.get_image(150,150),class:'rounded-circle' %>
    </div>
    <div class="col-8">
      <table class="table">
        <tbody>
         <tr>
          <th><%= @user.name %></th>
         </tr>
         <tr>
          <td><%= @user.introduction %></td>
         </tr>
        </tbody>
       </table>
    </div>
    <div class="col-2">
      <!--ユーザー編集ボタン-->
      <% if current_user == @user %>
             <%= link_to "Edit plofile", edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" %>
       <% end %>
       <!--フォローボタン-->
       <% if current_user != @user %>
             <% if current_user.following?(@user) %>
                <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn  btn-info rounded-pill" %>
             <% else %>
                <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn rounded-pill btn-outline-info" %>
             <% end %>
        <% end %>
    </div>
 </div>
 <div class="row my-5">
    <div class="col">
     <h3>My Page</h3>
    </div>
    <div class="col.justify-content-end">
     <!--新しい記事を書くボタン-->
       <%= link_to new_post_path, class:"btn  btn-outline-secondary" do %>
           新しい記事を書く<i class="fa-solid fa-pencil"></i>
       <% end %>
    </div>
 </div>
   <div class="row">
    <% @posts.each do |post| %>
      <div class="col.justify-content-around m-3">
         <!--投稿一覧-->
         <div class="card shadow" style="width: 15rem;">
             <%= image_tag post.get_post_image(500,500) %>
             <%=link_to post.title, post_path(post) %><br>
             <%= l post.created_at, format: :short %>
             <i class="fa-regular fa-heart"> <%= post.favorites.count %></i>
             <i class="fa-regular fa-comment"> <%= post.post_comments.count %></i>
         </div>
      </div>
    <% end %>
   </div>
</div>
