<table class="table">
  <tbody>
      <tr>
        <tr><%= image_tag user.get_image(100,100) %></tr>
      </tr>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
      <tr>
        <td>
        <% if current_user = user %>
              <% if current_user.following?(user) %>
                 <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn  btn-info rounded-pill" %>
              <% else %>
                 <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn rounded-pill btn-outline-info" %>
              <% end %>
        <% end %>
        </td>
      </tr>
      <tr>
        <th>
         <!--ユーザー編集ボタン-->
         <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </th>
      </tr>
  </tbody>
</table>