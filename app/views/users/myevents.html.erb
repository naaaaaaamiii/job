<div class="container">
  <div>
    <%= flash[:notice] %>
  </div>
  <h3 class="mb-4">My Event</h3>
  <div class="btn-group mx-2 mb-4">
    <%= link_to "自分が作成したイベント", myevents_user_path(event_type: "created_events"), class: "btn btn-primary" %>
    &nbsp;&nbsp;
    <%= link_to "参加予定イベント", myevents_user_path(event_type: "attended_events"), class: "btn btn-primary" %>
    &nbsp;&nbsp;
    <%= link_to "参加完了イベント", myevents_user_path(event_type: "past_attended_events"), class: "btn btn-primary" %>
  </div>

    <% @myevents.each do |event| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= link_to event.event_name, event_path(event) %></h5>
          <p class="card-text"><strong>開催日：</strong><%= event.date %></p>
          <p class="card-text"><strong>参加URL : </strong><%= link_to  event.url %></p>
          <p class="card-text"><strong>開催者：</strong><%= link_to event.creator.full_name, profile_users_path(event.creator) %></p>
        </div>
      </div>
    <% end %>
 
