 <% if current_user != user %>
             <% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn  btn-info rounded-pill", remote:true,  data: {"turbolinks" => false} %>
             <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn rounded-pill btn-outline-info", remote:true,  data: {"turbolinks" => false} %>
             <% end %>
 <% end %>