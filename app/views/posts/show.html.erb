<div class="container">
  <div class="row">
    <!--My pageに戻るボタン-->
    <div class="col-2">
      <%= link_to posts_path,class:"btn btn-outline-secondary rounded-circle" do %>
       <i class="fa-solid fa-angles-left"></i>
      <% end %>
    </div>
    <!--記事の詳細-->
    <div class="col">
      <%= @post.title %><br>
      <%= @post.body %>
    </div>
    <div class="col-3">
    <!--Userプロフィール-->
    <%= render 'users/index', user: @user %>
      <div class="row">
         <!--記事の編集-->
         <%= link_to edit_post_path(@post), class:"btn btn-outline-secondary" do %>
           記事の編集
         <% end %>
      </div>
    </div>
  </div>
</div>