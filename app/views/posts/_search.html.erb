<div class="form-inline">
      <%= form_with url: search_path, method: :get do |f| %>
          <%= f.text_field :content, placeholder:"キーワードを入力", class:'rounded-pill form-control' %>
          <%= f.select :model, options_for_select({"全てから探す" => nil, "Post" => "post", "PostTag" => "posttag"}) %>
          <%= f.select :method,options_for_select({"完全一致"=>"perfect","部分一致"=>"partial"})%>
          <%= button_tag type: "submit", class:'btn btn-outline-success' do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
      <% end %>
</div>
