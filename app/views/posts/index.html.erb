<div class="container">
 <h3 class="my-5">My Page</h3>
  <div class="row">
   <% @posts.each do |post| %>
     <div class="col-3 m-3">
      <div class="card shadow" style="width: 15rem;">
          <%= image_tag post.get_post_image(100,100) %>
          <%=link_to post.title, post_path(post) %><br>
          <%= l post.created_at, format: :short %>
      </div>
     </div>
   <% end %>
  </div>
</div>
